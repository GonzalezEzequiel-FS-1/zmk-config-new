/ {
    compatible = "zmk,keyboard";

    matrix {
        rows = <6>;
        cols = <4>;
        diode-direction = "col2row";

        row-gpios = <&gpio0 6 GPIO_ACTIVE_LOW>,
                    <&gpio0 8 GPIO_ACTIVE_LOW>,
                    <&gpio0 22 GPIO_ACTIVE_LOW>,
                    <&gpio0 17 GPIO_ACTIVE_LOW>,
                    <&gpio0 20 GPIO_ACTIVE_LOW>,
                    <&gpio0 24 GPIO_ACTIVE_LOW>;

        col-gpios = <&gpio0 15 GPIO_ACTIVE_LOW>,
                    <&gpio0 31 GPIO_ACTIVE_LOW>,
                    <&gpio0 29 GPIO_ACTIVE_LOW>,
                    <&gpio0 2 GPIO_ACTIVE_LOW>;
    };

    encoders {
        top_right_encoder: encoder@0 {
            a-gpios = <&gpio0 29 GPIO_ACTIVE_LOW>;
            b-gpios = <&gpio0 2 GPIO_ACTIVE_LOW>;
        };

        middle_left_encoder: encoder@1 {
            a-gpios = <&gpio0 17 GPIO_ACTIVE_LOW>;
            b-gpios = <&gpio0 20 GPIO_ACTIVE_LOW>;
        };
    };

    rgb {
        compatible = "zmk,rgb_underglow";
        led-gpios = <&gpio0 21 GPIO_ACTIVE_HIGH>;
        num-leds = <12>; /* example number of LEDs */
    };
};
